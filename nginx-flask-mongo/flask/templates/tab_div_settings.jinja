<div class="divContent" style="width: 1355px; margin:auto">
    <table style="width: 100%;">
        <tr style="height: 30px;;">
            <td style="vertical-align:top;"><span class="tabTitle">Model Defaults</span></td>
            <td style="text-align: right;"><a href="{{ url_for('help') }}" target="_blank">Help</a></td>
        </tr>
    </table>            
    <div class="divInnerContent" style=" width: 1330px; margin:auto;">
        <form form action="{{ url_for('settings') }}" method="post" id="settingsForm">
            <input type="hidden" name="csrf_token" value = "{{ csrf_token() }}" />
            <table>
                <tr>
                    <th colspan="4" style="font-size: large;">API Setup:</th>
                </tr>
                <tr>
                    <th>Source</th>
                    <th>API Key</th>
                </tr>
                <tr>
                    <td>{{ api_settings.api_src(autocomplete="off") }}</td>
                    <td>{{ api_settings.api_key(autocomplete="off", class="inputText", style="width:500px;") }}</td>
    
                </tr>
            </table>
            <table>
                <tr>
                    <th colspan="6"style="font-size: large;">Reinvestment Form Defaults:</th>
                </tr>
                <tr>
                    <th>Initial Capital</th>
                    <th>Contributions  </th>
                    <th>Shares Owned   </th>
                    <th>Periods        </th>
                    <th>Frequency      </th>
                    <th>Reinvest Mode  </th>
                </tr>
                <tr>
                    <td>{{ settings.initial_capital(autocomplete="off", class="inputText") }}</td>
                    <td>{{ settings.contribution(autocomplete="off", class="inputText") }}</td>
                    <td>{{ settings.shares_owned(autocomplete="off", class="inputText") }}</td>
                    <td>{{ settings.term(autocomplete="off", class="inputText") }}</td>
                    <td>{{ settings.frequency(autocomplete="off") }}</td>
                    <td>{{ settings.purchase_mode(autocomplete="off") }}</td>
                </tr>
            </table>
            <table width="100%">
                <tr>
                    <td style="text-align: right;">{{ settings.save(class="inputButton") }}</td>
                </tr>
            </table>
        </form>
    </div>
</div>

